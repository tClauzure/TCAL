{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./server",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["server/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}